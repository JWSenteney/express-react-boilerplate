{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:JWSenteney/express-react-boilerplate.git",
  "author": "Jacob W Senteney",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json}": [
      "eslint --fix",
      "git add"
    ],
    "*.css": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "endOfLine": "lf"
  },
  "scripts": {
    "dev": "concurrently \"yarn dev-server\" \"yarn dev-ui\"",
    "dev-server": "nodemon index.js",
    "dev-ui": "yarn --cwd ui start",
    "lint": "eslint .",
    "lintfix": "eslint . --fix",
    "start": "node index.js"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "eslint": "5.6.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-json": "^1.3.2",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.18.7",
    "prettier": "^1.15.3"
  },
  "dependencies": {
    "express": "^4.16.4"
  }
}
